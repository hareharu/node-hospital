{
  "name": "node-hospital",
  "version": "0.9.7",
  "description": "Веб-приложение в помощь сотрудникам медучреждений; имеется интеграция с ИС Стационар, МИС Госпиталь и рядом ресурсов ТФОМС Красноярского края",
  "license": "MIT",
  "private": true,
  "author": "Denis Larionov <mr.hareharu@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hareharu/node-hospital"
  },
  "main": "who.js",
  "scripts": {
    "server": "cross-env SERVER_VERSION=$npm_package_version node ./app/server.js",
    "client": "cross-env REACT_APP_VERSION=$npm_package_version REACT_APP_BUILD=LIVERELOAD react-scripts start",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "update": "cross-env node ./app/update.js",
    "test": "react-scripts test",
    "analyze": "source-map-explorer 'client/static/js/*.js'",
    "build": "cross-env REACT_APP_VERSION=$npm_package_version react-scripts build && shx rm -rf ./build/{service-worker.js,*manifest*}",
    "prebuild": "shx rm -rf ./client",
    "postbuild": "shx mv ./build ./client",
    "packapp": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./pack-app.ps1",
    "clean": "shx rm -rf ./dist"
  },
  "dependencies": {
    "activedirectory2": "~2.1.0",
    "connect-sqlite3": "~0.9.11",
    "cookie-parser": "^1.4.5",
    "dotenv": "~8.2.0",
    "express": "~4.17.1",
    "express-fileupload": "^1.2.0",
    "express-http-proxy": "^1.6.2",
    "express-session": "^1.17.1",
    "md5": "~2.3.0",
    "morgan": "~1.10.0",
    "node-firebird": "^0.9.8",
    "node-html-parser": "~1.2.20",
    "node-schedule": "~1.3.2",
    "pg-promise": "^10.8.0",
    "pm2": "^4.5.0",
    "puppeteer": "^4.0.1",
    "soap": "~0.33.0",
    "sqlite3": "~4.2.0",
    "timestamp-zoned": "^1.0.4",
    "transliteration": "^2.2.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@lourenci/react-kanban": "^2.1.0",
    "@tinymce/tinymce-react": "^3.8.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@uifabric/fluent-theme": "^7.3.43",
    "@uifabric/react-cards": "^0.114.15",
    "@uifabric/styling": "^7.16.18",
    "@vtex/react-csv-parse": "^3.0.2",
    "chalk": "^4.1.0",
    "codemirror": "^5.58.3",
    "concurrently": "^5.3.0",
    "core-js": "^3.7.0",
    "cross-env": "^7.0.2",
    "crypto-js": "^4.0.0",
    "feather-icons": "^4.28.0",
    "file-saver": "^2.0.5",
    "http-proxy-middleware": "^1.0.6",
    "office-ui-fabric-react": "^7.152.2",
    "preval.macro": "^5.0.0",
    "pt-sans-cyrillic": "^0.0.4",
    "react": "^17.0.1",
    "react-codemirror2": "^7.2.1",
    "react-cookie": "^4.0.3",
    "react-custom-scrollbars": "^4.2.1",
    "react-data-export": "^0.6.0",
    "react-dom": "^17.0.1",
    "react-html-parser": "^2.0.2",
    "react-inlinesvg": "^1.2.0",
    "react-player": "^2.7.0",
    "react-scripts": "4.0.1",
    "screenfull": "^5.0.2",
    "shx": "^0.3.3",
    "source-map-explorer": "^2.5.0",
    "styled-components": "^5.2.1",
    "tinymce": "^5.6.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2",
    "universal-cookie": "^4.0.4",
    "whatwg-fetch": "^3.5.0",
    "xlsx": "^0.16.9"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-multi-str": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 ie version"
    ]
  }
}
